[fetch]
	prune = true
[push]
	default = current
[pull]
	rebase = true
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	autocrlf = input
[alias]
	au = add --update
	aa = add --all
	ap = add --patch
	ai = add --interactive
	br = branch
	co = checkout
	ci = commit
	ca = commit --amend
	st = status -s
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative --all --decorate
	cp = cherry-pick
	dc = diff --cached
	dw = diff --word-diff
	last = log -1 --stat
	unstage = reset HEAD --
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = !git ls-files -v | grep ^h | cut -c 3-
